                <li><a href="#">Profile</a></li>
                <li class="dropdown"><a href="#"><span>Help & Support</span> <i class="bi bi-chevron-right"></i></a>
                  <ul>
                    <li><a href="#">Help Center</a></li>
                    <li><a href="#">Support Inbox</a></li>
                    <li><a href="#">Report a problem</a></li>
                    <li><a href="#">Terms & Policies</a></li>
                  </ul>
                </li>
                <li><a href="#">Settings & Privacy</a></li>
                <li><a href="/insightserenity/user/logout" class="text-danger">Logout</a></li>
              </ul>
            </li>
          <% } else if (currentUser.role === 'client') { %>
            <li><a href="/insightserenity/client/" class="nav-link scrollto">Client Profile</a></li>
            <li class="dropdown"><a href="#"><span>Welcome to Insightserenity, <%= currentUser.firstname %> <%= currentUser.lastname %></span> <i class="bi bi-chevron-down"></i></a>
              <ul>
                <li><a href="#">Profile</a></li>
                <li class="dropdown"><a href="#"><span>Help & Support</span> <i class="bi bi-chevron-right"></i></a>
                  <ul>
                    <li><a href="#">Help Center</a></li>
                    <li><a href="#">Support Inbox</a></li>
                    <li><a href="#">Report a problem</a></li>
                    <li><a href="#">Terms & Policies</a></li>
                  </ul>
                </li>
                <li><a href="#">Settings & Privacy</a></li>
                <li><a href="/insightserenity/user/logout" class="text-danger">Logout</a></li>
              </ul>
            </li>
          <% } %>
        <% } %>
      </ul>
      <i class="bi bi-list mobile-nav-toggle"></i>
    </nav><!-- .navbar -->
    <% if (!currentUser) { %>
      <a href="/insightserenity/user/login" class="get-started-btn scrollto">Login</a>
      <a href="/insightserenity/user/register" class="get-started-btn scrollto">Get Started</a>
    <% } %>
  </div>
</header>
