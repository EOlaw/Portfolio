<header id="header" class="fixed-top">
  <div class="container d-flex align-items-center justify-content-lg-between">
    <h1 class="logo me-auto me-lg-0"><a href="/insightserenity/">IS<span>.</span></a></h1>
    <nav id="navbar" class="navbar order-last order-lg-0">
      <ul>
        <li><a class="nav-link scrollto active" href="/insightserenity/">Home</a></li>
        <li><a class="nav-link scrollto" href="/insightserenity/about">About</a></li>
        <li><a class="nav-link scrollto" href="/insightserenity/service/">Services</a></li>
        <li><a class="nav-link scrollto" href="/insightserenity/team">Team</a></li>
        <li><a class="nav-link scrollto" href="/insightserenity/contact">Contact</a></li>
        <% if (currentUser) { %>
          <% if (currentUser.role === 'consultant') { %>
            <li><a href="/insightserenity/consultant/" class="nav-link scrollto">Consultant Profile</a></li>
            <li class="dropdown"><a href="#"><span>Welcome to Insightserenity, <%= currentUser.firstname %> <%= currentUser.lastname %></span> <i class="bi bi-chevron-down"></i></a>
