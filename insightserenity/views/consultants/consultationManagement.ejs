<% layout('layouts/boilerplate') %>
  <main id="main" style="margin-top: 100px;">
    <div class="container">
      <div class="section-title">
        <h2>Manage Consultations</h2>
        <p>View and manage your consultations</p>
      </div>

      <!-- List of consultations -->
      <div class="row">
        <% consultations.forEach(consultation => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Consultation with <%= consultation.client.name %></h5>
                <p class="card-text"><strong>Date:</strong> <%= new Date(consultation.date).toLocaleString() %></p>
                <p class="card-text"><strong>Duration:</strong> <%= consultation.duration %> minutes</p>
                <p class="card-text"><strong>Mode:</strong> <%= consultation.mode %></p>
                <p class="card-text"><strong>Notes:</strong> <%= consultation.notes %></p>
                <p class="card-text"><strong>Status:</strong> <%= consultation.status %></p>
                <!-- Add more fields as needed -->
                <a href="/consultations/<%= consultation._id %>/edit" class="btn btn-primary">Edit</a>
                <a href="/consultations/<%= consultation._id %>/cancel" class="btn btn-danger">Cancel</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      
    </div>
  </main>