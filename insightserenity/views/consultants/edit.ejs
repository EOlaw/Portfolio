<% layout('layouts/boilerplate') %>

<!-- Header Start -->
<div class="container-fluid bg-black py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Edit Profile</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="/insightserenity">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white" href="/insightserenity/consultant/">Consultant Profile</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Edit Profile</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->


<main id="main" style="margin-top: 100px;">
    <div class="container">
        <div class="section-title">
            <h2>Edit Profile</h2>
            <p>Update your information</p>
        </div>

        <form action="/insightserenity/consultant/edit?_method=PUT" method="POST">
            <div class="row">
                <div class="col-lg-6 mb-3">
                    <label for="firstname" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" value="<%= consultant.userId.firstname %>" required>
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="lastname" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="lastname" name="lastname" value="<%= consultant.userId.lastname %>" required>
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= consultant.userId.email %>" required>
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="contactNumber" class="form-label">Contact Number</label>
                    <input type="text" class="form-control" id="contactNumber" name="contactNumber" value="<%= consultant.userId.contactNumber %>">
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="profilePicture" class="form-label">Profile Picture URL</label>
                    <input type="text" class="form-control" id="profilePicture" name="profilePicture" value="<%= consultant.userId.profilePicture %>">
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="specializations">Specializations</label>
                    <input type="text" class="form-control" id="specializations" name="specializations" value="<%= consultant.specializations.join(', ') %>" required>
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="experienceYears">Years of Experience</label>
                    <input type="number" class="form-control" id="experienceYears" name="experienceYears" value="<%= consultant.experienceYears %>">
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="bio">Biography</label>
                    <textarea class="form-control" id="bio" name="bio" rows="5"><%= consultant.bio %></textarea>
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="certifications">Certifications</label>
                    <input type="text" class="form-control" id="certifications" name="certifications" value="<%= consultant.certifications.join(', ') %>">
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="linkedInProfile">LinkedIn Profile</label>
                    <input type="text" class="form-control" id="linkedInProfile" name="linkedInProfile" value="<%= consultant.linkedInProfile %>">
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="availability">Availability</label>
                    <select class="form-control" id="availability" name="availability">
                        <option value="true" <%= consultant.availability ? 'selected' : '' %>>Available</option>
                        <option value="false" <%= !consultant.availability ? 'selected' : '' %>>Unavailable</option>
                    </select>
                </div>
                <!-- <button type="submit" class="btn btn-primary">Save Changes</button> -->
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary">Update Profile</button>
                </div>
            </div>
        </form>
    </div>
</main>

